{
  "root": true,
  "ignorePatterns": ["node_modules/", "/src/", "/bld/"],
  "extends": ["plugin:@mufan/javascript"],
  "overrides": [
    {
      "files": "**/*.{js,cjs}",
      "parserOptions": {
        "sourceType": "script"
      }
    },
    {
      "files": "**/*.mjs",
      "parserOptions": {
        "sourceType": "module"
      }
    }
  ]
}
